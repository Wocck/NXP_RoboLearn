&lpi2c1 {
    status = "okay";
    pinctrl-0 = <&pinmux_lpi2c1>;
    pinctrl-names = "default";

    aht20: aht20@70 {
        compatible = "aosong,aht20";
        reg = <0x70>;
    };
};

&lpspi1 {
    status = "okay";
    cs-gpios = <&gpio3 13 GPIO_ACTIVE_LOW>;
    spii: spii@0 {
            compatible = "vnd,spi-device";
            reg = <0>;
            spi-max-frequency = <1600000>;
            label = "spii";
        };
};
